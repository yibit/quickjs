{
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.sh": "shellscript",
        "*.lua": "lua",
        "*.go": "go"
    },
    "files.encoding": "utf8",
    "files.exclude": {
        "**/.git": true,
        "**/book/book": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.obj": true,
        "**/*.d": true,
        "**/*.o": true,
        "**/*.udb": true,
        "**/*.gz": true,
        "**/*.tar": true,
        "**/*.*tags": true
    },
}
